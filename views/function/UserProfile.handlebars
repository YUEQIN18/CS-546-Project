<body>
  <div class="userProfileTitle">
    <h1>Welcome!!! {{user.firstname}} {{user.lastname}}</h1>
    <h2>Your Public Profile</h2>
    
  </div>
  <div class = "userProfile">
    <form action="/users/profile" method="POST" id="profileform">
      {{#if edit}}
      <input type="text" id="userId" name="id" value="{{user.id}}" hidden/> 
      <p> Firstname </p>
      <input type="text" id="userfirstname" name="firstname" value="{{user.firstname}}" />
      <p> Lastname </p>
      <input type="text" id="userlastname" name="lastname" value="{{user.lastname}}" size="30"/>
      <p> Email Address </p>
      <input type="text" id="useremail" name="email" value="{{user.email}}" size="30"/>
      <p> Gender </p>
      <input type="text" id="usergender" name="gender" value="{{user.gender}}" size="30"/>
      <p> City </p>
      <input type="text" id="usercity" name="city" value="{{user.city}}" size="30"/>
      <p> State </p>
      <input type="text" id="userstate" name="state" value="{{user.state}}" size="30"/>
      <p> Age </p>
      <input type="text" id="userage" name="age" value="{{user.age}}" size="30"/>
      <p> Description </p>
      <input type="text" id="userdescription" name="description" value="{{user.description}}" size="30"/>
      <div class="userProfileButton">
        <button type="submit" class="button" ><span>Submit</span> </button>
      </div>
      {{else}}
      <input type="text" id="userId" name="id" value="{{user.id}}" hidden/>
      <p> Firstname </p>
      <p>{{user.firstname}}<p>
      <p> Lastname </p>
      <p>{{user.lastname}}</p>
      <p> Email Address </p>
      <p>{{user.email}}</p>
      <p> Gender </p>
      <p>{{user.gender}}</p>
      <p> City </p>
      <p>{{user.city}}</p>
      <p> State </p>
      <p>{{user.state}}<p>
      <p> Age </p>
      <p>{{user.age}}</p>
      <p> Description </p>
      <p>{{user.description}}</p>
      <p>Favorite</p>
      {{#each user.favorites}}
       <div>
         <a href="/parks/{{this.parkId}}">{{this.parkname}}</a>
       </div>
      {{/each}}
      <p> Your Apointments </p>
      {{#unless user.appointments}}
      <p> You have no appointment right now! </p>
      {{/unless}}
      {{#each user.appointments}}
         <div class="card" style="width: 18rem;">
            <div class="card-body">
              <p>Date:</p>
              <h5 class="card-text">{{this.date}}</h5>
              <p>Time:</p>
              <h5 class="card-text">{{this.time}}</h5>
              <p>Place:</p>
              <h6 class="card-subtitle mb-2 text-muted">{{this.park}}</h6>
              <h6 class="card-subtitle mb-2 text-muted">{{this.activity}}</h6>
              <p>Status:</p>
              {{#if this.status}}
              <h5 class="card-title">Matched</h5>
              {{else}}
              <h5 class="card-title">Not Matched</h5>
              {{/if}}
              <h6 class="card-subtitle mb-2 text-muted">------------------------------</h6>
            </div>
         </div>
      {{/each}}
      <div class="userProfileButton">
        <button type="submit" class="button"><span>Edit Profile</span> </button>
      </div>
      {{/if}}

      <div>
        <a href="/users/logout">Log out</a>
      </div>
    </form>
  </div>
  
</body>