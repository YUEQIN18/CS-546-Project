<header>
    <h1>
        MATCH A NEW APPOINTMENT
    </h1>
</header>

<div >
    <form action="/appointments/matchNewAppointment" method="POST" id="login-form">
        <div class="login">
            <label for="year">activity:</label>
            <select value="{{operation}}" name="activity">
                <option value="Tennis">Tennis</option>
                <option value="Basketball">Basketball</option>
                <option value="Jog">Jog</option>
                <option value="Soccer">Soccer</option>
                <option value="Baseball">Baseball</option>
                <option value="Skate">Skate</option>
                <option value="Yoga">Yoga</option>
                <option value="Rugby">Rugby</option>
            </select>
        </div>
        <div class="login">
            <label for="year">year:</label>
            <input type="text" name="year" class="textInput"/>
        </div>
        <div class="login">
            <label for="month">month:</label>
            <input type="text" name="month" class="textInput"/>
        </div>
        <div class="login">
            <label for="day">day:</label>
            <input type="text" name="day" class="textInput"/>
        </div>
        <div class="login">
            <label for="hour">hour:</label>
            <input type="text" name="hour" class="textInput"/>
        </div>
        <div class="login">
            <label for="minute">minute:</label>
            <input type="text" name="minute" class="textInput"/>
        </div>

        <div>
            <button type="submit" class="button">Match</button>
        </div>
    </form>
    {{#if error}}
	    <p >{{error}}</p>
	  {{/if}}
</div>