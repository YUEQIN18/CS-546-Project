<header>
    <div>
        <ul class="topnav">
            <li><a href="/">HOME</a></li>
            <li><a href="">ACTIVITIES</a></li>
            <li class="right"><a href="">ABOUT</a></li>
            <li class="right"><a href="/users">USER</a></li>
        </ul>
    </div>
    
    <h1>
        Sign Up
    </h1>
</header>

<div>
    <form action="/users/signup" method="POST" id="signup-form">
        <div class="signup">
            <label for="firstname">First Name:</label>
            <input type="text" name="firstname" id="firstname" class="textInput"/>
        </div>
        <div class="signup">
            <label for="lastname">Last Name:</label>
            <input type="text" name="lastname" id="lastname" class="textInput"/>
        </div>
        <div class="signup">
            <label for="email">Email Address:</label>
            <input type="text" name="email" id="email" class="textInput"/>
        </div>
        <div class="signup">
            <label for="Password">Password:</label>
            <input type="password" name="password" id="password" class="textInput"/>
        </div>
        <div>
            <button type="submit" class="button">Sign Up</button>
        </div>
    </form>
    {{#if send}}
	    <p >{{send}}</p>
	  {{/if}}
    {{#if error}}
	    <p >{{error}}</p>
	  {{/if}}
    {{#if status}}
        <p>{{status}}</p>
    {{else}}
        <p>{{message}}</p>
    {{/if}}
    <hr>
    <a href="/users/login"> Already have an account? Click here to log-in </a>
</div>