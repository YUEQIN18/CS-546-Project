
<div>
    <h1>
      Log in
    </h1>
    <form action="/users/signup" method="POST" id="signup-form">
        <div class="signup">
            <label for="firstname">First Name:</label>
            <input type="text" name="firstname" id="firstname" class="textInput"/>
        </div>
        <div class="signup">
            <label for="lastname">Last Name:</label>
            <input type="text" name="lastname" id="lastname" class="textInput"/>
        </div>
        <div class="signup">
            <label for="email">Email Address:</label>
            <input type="text" name="email" id="email" class="textInput"/>
        </div>
        <div class="signup">
            <label for="Password">Password:</label>
            <input type="password" name="password" id="password" class="textInput"/>
        </div>
        <div>
            <button type="submit" class="button">Sign Up</button>
        </div>
    </form>
    {{#if error}}
	    <p >{{error}}</p>
	  {{/if}}
    <a href="/users/login" class="txt"> Already have an account? Click here to log-in </a>
</div>