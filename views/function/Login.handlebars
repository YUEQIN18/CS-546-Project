<div >
    <h1>
      Log in
    </h1>
    <form action="/users/login" method="POST" id="login-form">
        <div class="login">
            <label for="firstname">First Name:</label>
            <input type="text" name="firstname" id="firstname" class="textInput"/>
        </div> 
        <div class="login">
            <label for="lastname">Last Name:</label>
            <input type="text" name="lastname" id="lastname" class="textInput" />
        </div>
        <div class="login">
            <label for="email">Email Address:</label>
            <input type="text" name="email" id="email" class="textInput"/>
        </div>
        <div class="login">
            <label for="Password">Password:</label>
            <input type="password" name="password" id="password" class="textInput"/>
        </div>
        <div>
            <button type="submit" class="button">Login</button>
        </div>
    </form>
    {{#if error}}
	    <p >{{error}}</p>
	  {{/if}}
    <a href="/users/signup" class="txt"> Need to register? Click here to sign-up </a>
</div>