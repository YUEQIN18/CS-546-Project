<header>
    <h1>
        CREATE A NEW APPOINTMENT
    </h1>
</header>

<div >
    <form action="/appointments/creatNewAppointment" method="POST" id="login-form">
        
        <div class="login">
            <label for="year">year:</label>
            <input type="text" name="year" class="textInput"/>
        </div>
        <div class="login">
            <label for="month">month:</label>
            <input type="text" name="month" class="textInput"/>
        </div>
        <div class="login">
            <label for="day">day:</label>
            <input type="text" name="day" class="textInput"/>
        </div>
        <div class="login">
            <label for="hour">hour:</label>
            <input type="text" name="hour" class="textInput"/>
        </div>
        <div class="login">
            <label for="minute">minute:</label>
            <input type="text" name="minute" class="textInput"/>
        </div>

        <div>
            <button type="submit" class="button">Login</button>
        </div>
    </form>
    {{#if error}}
	    <p >{{error}}</p>
	  {{/if}}
</div>